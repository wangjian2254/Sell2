<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:gravity="center"
	 android:focusable="true"  
   android:focusableInTouchMode="true"
	android:background="#E0E0E0">
	<RelativeLayout 
		android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="50dip"
		>
		<TextView 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_height="50dip" android:layout_gravity="center"
		android:background="@drawable/umeng_analyse_feedback_bar_bg" 
		android:layout_alignParentBottom="true"/>
		<TextView  android:id="@+id/document_title" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="50dip"
		android:layout_marginRight="50dip"
		android:layout_height="50dip" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="18dip"
		/>
		
		</RelativeLayout>
		<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" >
		<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical"  
		>
		<TextView  android:id="@+id/document_info" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_height="20dip" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="12dip"/>
		<LinearLayout android:id="@+id/piclist"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical"  
		>
		</LinearLayout>
		
		<TextView  android:id="@+id/document_content" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:gravity="left"  android:textSize="14dip"/>
	
		</LinearLayout>
		</ScrollView>
</LinearLayout>