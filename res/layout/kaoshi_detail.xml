<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" 
	android:gravity="center"
	 android:focusable="true"  
   android:focusableInTouchMode="true"
	android:background="#E0E0E0">
	<RelativeLayout 
		android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="50dip"
		>
		<TextView 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_height="50dip" android:layout_gravity="center"
		android:background="@drawable/umeng_analyse_feedback_bar_bg" 
		android:layout_alignParentBottom="true"/>
		<TextView  android:id="@+id/document_title" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="50dip"
		android:layout_marginRight="50dip"
		android:layout_height="50dip" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="18dip"
		/>
		<Button android:id="@+id/jishi_btn"
		android:layout_alignParentTop="true"
		android:layout_marginTop="5dip"
			android:layout_width="70dip" android:layout_height="30dip"
			android:layout_marginLeft="6dip" android:layout_marginRight="6dip"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:onClick="onjiaojuan"
			android:text="交卷" android:textColor="#FFFFFF" />
		</RelativeLayout>
		<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent" >
		<LinearLayout 
		android:layout_width="fill_parent" android:layout_height="fill_parent"
		android:orientation="vertical"  
		>
		<TextView  android:id="@+id/document_info" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_height="wrap_content" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="18dip"/>
		<LinearLayout
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="vertical"  
		>
		<RadioGroup  android:id="@+id/choicelist"
		android:layout_alignParentTop="true"
		android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
		 >
		</RadioGroup>
		</LinearLayout>
		<RelativeLayout 
		android:gravity="center_horizontal"
		android:layout_width="fill_parent" android:layout_height="50dip"
		>
		
		<Button 
		android:layout_alignParentTop="true"
		android:layout_marginTop="5dip"
			android:layout_width="70dip" android:layout_height="30dip"
			android:layout_marginLeft="6dip" android:layout_marginRight="6dip"
			android:layout_alignParentLeft="true" android:layout_centerVertical="true"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:onClick="shangyiti"
			android:text="上一题" android:textColor="#FFFFFF" />
		
		<Button 
		android:layout_alignParentTop="true"
		android:layout_marginTop="5dip"
			android:layout_width="70dip" android:layout_height="30dip"
			android:layout_marginLeft="6dip" android:layout_marginRight="6dip"
			android:layout_alignParentRight="true" android:layout_centerVertical="true"
			android:background="@drawable/umeng_analyse_submit_selector"
			android:onClick="xiayiti"
			android:text="下一题" android:textColor="#FFFFFF" />
		</RelativeLayout>
		<TextView  android:id="@+id/document_answer" 
		android:layout_alignParentTop="true"
		android:layout_width="fill_parent" android:textColor="#565656"
		android:layout_marginTop="5dip"
		android:layout_marginLeft="5dip"
		android:layout_marginRight="5dip"
		android:layout_height="20dip" android:layout_gravity="center"
		android:gravity="center|center"  android:textSize="12dip"/>
		</LinearLayout>
		</ScrollView>
</LinearLayout>